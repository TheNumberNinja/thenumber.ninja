<div class="topbar visible-md-block visible-lg-block">
  <div class="container">
    <div class="row">
      <div class="col-md-9 col-md-offset-3">
        <div class="topbar--right">
          <div class="follow_us">
            <strong>Follow me</strong>
            <ul>
              <li><a href="https://www.instagram.com/the_number_ninja/"><i class="fa-brands fa-instagram"></i></a></li>
              <li><a href="https://www.facebook.com/thenumberninja/"><i class="fa-brands fa-facebook-square"></i></a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<header class="header">
  <div class="container">
    <div class="header--inner">
      <div class="row">
        <div class="col-lg-2 col-md-12">
          <div class="header--logo logo">
            <a href="/"><img src="/assets/images/logo-header.png" alt="The Number Ninja" /></a>
          </div>
        </div>
        <div class="col-lg-10 col-md-12 visible-md-block visible-lg-block">
          <div class="header--right">
            <a href="/book-a-call/" class="button -bordered -menu_size"><i class="fa-solid fa-phone"></i> <span
                class="button--inner">Book a call</span></a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <nav id="main" class="header_nav -wide visible-md-block visible-lg-block">
    <div class="header_nav--inner">
      <ul class="menu">
        {% set navPages = collections.all | eleventyNavigation %}
        {% for entry in navPages | filterUnwantedNavigationElements %}
          {% set isCurrentPage = entry.url == page.url %}
          <li class="menu-item {% if isCurrentPage %}current-menu-item{% endif %}"
              {% if isCurrentPage %}aria-current="page"{% endif %}>
            <a href="{{ entry.url }}">{{ entry.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </nav>

  <div class="header--menu_opener visible-xs-block visible-sm-block">
		<span id="hamburger" class="c-hamburger c-hamburger--htx">
  		<span>toggle menu</span>
  	</span>
  </div>

  <div id="mobile_sidebar" class="mobile_sidebar">
    <div class="mobile_sidebar--closer -white">
      <button class="c-hamburger c-hamburger--htx is-active"><span>toggle menu</span></button>
    </div>
    <div class="mobile_menu">
      <ul class="menu">
        {% set navPages = collections.all | eleventyNavigation %}
        {% for entry in navPages | filterUnwantedNavigationElements %}
          <li class="menu-item {% if isCurrentPage %}current-menu-item{% endif %}"
              {% if isCurrentPage %}aria-current="page"{% endif %}>
            <a href="{{ entry.url }}">{{ entry.title }}</a>
          </li>
        {% endfor %}
        <li class='menu-item'>
          <a href="/book-a-call/"><i class="fa-solid fa-phone"></i> Book a Call</a>
        </li>
      </ul>
    </div>

    <!-- follow me-->
    <div class="follow_us -mobile_sidebar">
      <strong>Follow me</strong>
      <ul>
        <li><a href="https://www.instagram.com/the_number_ninja/"><i class="fa-brands fa-instagram-square"></i></a></li>
        <li><a href="https://www.facebook.com/thenumberninja/"><i class="fa-brands fa-facebook-square"></i></a></li>
      </ul>
    </div>
    <!-- /follow me-->
  </div>


</header>
